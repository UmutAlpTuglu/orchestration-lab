{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/install/lib/python3.10/site-packages:${env:PYTHONPATH}"
            }
        },
        {
            "name": "ROS: Launch File",
            "type": "ros",
            "request": "launch",
            "target": "${workspaceFolder}/src/pointcloud_detection/launch/pointcloud_detection.launch.py"
        },
        {
            "name": "ROS: Attach to Node",
            "type": "ros",
            "request": "attach"
        }
    ]
}